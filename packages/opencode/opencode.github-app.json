{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "compaction": {
      "prompt": "{file:./.opencode/prompts/compaction.txt}"
    },
    "sous-chef": {
      "description": "Research and planning agent for /bbq.pantry and /bbq.prep workflows",
      "mode": "primary",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      },
      "prompt": "{file:./.opencode/prompts/sous-chef.txt}"
    },
    "pitmaster": {
      "description": "Implementation and review-fix agent for /bbq.fire and /bbq.taste workflows",
      "mode": "primary",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      },
      "prompt": "{file:./.opencode/prompts/pitmaster.txt}"
    }
  },
  "mcp": {
    "linear": {
      "type": "remote",
      "url": "https://mcp.linear.app/mcp",
      "headers": {
        "Authorization": "Bearer {env:BBQ_LINEAR_API_KEY}"
      },
      "enabled": true
    },
    "github": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "--rm",
        "-i",
        "-e",
        "GITHUB_APP_ID",
        "-e",
        "GITHUB_APP_INSTALLATION_ID",
        "-e",
        "GITHUB_APP_PRIVATE_KEY",
        "bbqparty/github-app-mcp"
      ],
      "environment": {
        "GITHUB_APP_ID": "{env:BBQ_GITHUB_APP_ID}",
        "GITHUB_APP_INSTALLATION_ID": "{env:BBQ_GITHUB_APP_INSTALLATION_ID}",
        "GITHUB_APP_PRIVATE_KEY": "{env:BBQ_GITHUB_APP_PRIVATE_KEY}"
      },
      "enabled": true
    }
  }
}

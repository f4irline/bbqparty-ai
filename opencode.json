{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "linear": {
      "type": "remote",
      "url": "https://mcp.linear.app/mcp",
      "headers": {
        "Authorization": "Bearer {env:BBQ_LINEAR_API_KEY}"
      },
      "enabled": true
    },
    "github": {
      "type": "local",
      "command": ["node", "mcp/github-app/dist/index.js"],
      "environment": {
        "GITHUB_APP_ID": "{env:BBQ_GITHUB_APP_ID}",
        "GITHUB_APP_PRIVATE_KEY_PATH": "{env:BBQ_GITHUB_APP_KEY_PATH}",
        "GITHUB_APP_INSTALLATION_ID": "{env:BBQ_GITHUB_APP_INSTALLATION_ID}"
      },
      "enabled": true
    }
  }
}
